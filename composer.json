{
    "require": {
        "php": ">=7.4.0"
    },
    "require-dev": {
        "ork/phpcs": "^2.2.0",
        "phpunit/phpunit": "^9.5.1",
        "phpstan/phpstan": ">=0.12.69 <1.0.0"
    },
    "autoload": {
        "psr-4": {
            "ToBeAgile\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ToBeAgileTest\\": "tests/"
        }
    },
    "scripts": {
        "coverage": "XDEBUG_MODE=coverage phpunit",
        "phpcs": "phpcs",
        "phpstan": "phpstan analyze",
        "test": "phpunit --no-coverage --stop-on-defect"
    }
}
