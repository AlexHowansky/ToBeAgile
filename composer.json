{
    "require": {
        "php": "^8.5.0"
    },
    "require-dev": {
        "ork/phpcs": ">=3.0.0",
        "phpunit/phpunit": ">=12.5.8",
        "phpstan/phpstan": ">=2.1.37"
    },
    "autoload": {
        "psr-4": {
            "ToBeAgile\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ToBeAgileTest\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "coverage": "XDEBUG_MODE=coverage phpunit",
        "phpcs": "phpcs",
        "phpstan": "phpstan analyze",
        "test": "phpunit --no-coverage --stop-on-defect"
    }
}
